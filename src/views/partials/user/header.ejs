<header class="bg-[#f8f9fa] py-3 sticky top-0 z-50 border-b border-gray-200 shadow-sm">
  <div class="max-w-7xl mx-auto px-6 flex items-center justify-between gap-4">
    
    <div class="flex-shrink-0">
      <a href="/" class="text-2xl font-black text-black no-underline tracking-tighter uppercase italic">
        Electro<span class="text-red-600">.</span>
      </a>
    </div>

    <div class="flex-1 max-w-2xl hidden md:block">
      <form action="/search" method="GET" class="relative">
        <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
          <i class="fas fa-search text-sm"></i>
        </span>
        <input 
          type="text" 
          name="q" 
          placeholder="Search for products..."
          class="w-full bg-white border border-gray-300 rounded-md py-2 pl-11 pr-4 text-sm focus:outline-none focus:ring-2 focus:ring-red-600 focus:border-transparent transition-all shadow-sm"
        >
      </form>
    </div>

    <div class="flex items-center gap-3">
      
      <div class="relative inline-block">
        <button 
          onclick="toggleDropdown()" 
          id="dropdownButton"
          class="bg-[#212529] text-white flex items-center gap-2 rounded px-4 py-2 hover:bg-black transition-all focus:outline-none"
          aria-haspopup="true"
        >
          <i class="fas fa-user-circle text-lg"></i>
          <span class="text-sm font-bold hidden sm:inline">SignUp</span>
          <i id="chevronIcon" class="fas fa-chevron-down text-[10px] transition-transform duration-300"></i>
        </button>

        <ul 
          id="dropdownMenu" 
          class="hidden absolute right-0 bg-white border border-gray-200 shadow-xl mt-2 z-50 w-48 rounded-lg py-1 overflow-hidden"
        >
          <li>
            <a href="/auth/signUp" class="flex items-center font-bold text-sm px-4 py-3 hover:bg-gray-50 text-gray-700 no-underline transition-colors border-b border-gray-100">
              <i class="fas fa-user-plus mr-3 text-gray-400"></i> SignUp
            </a>
          </li>
          <li>
            <a href="/auth/logIn" class="flex items-center font-bold text-sm px-4 py-3 hover:bg-gray-50 text-gray-700 no-underline transition-colors">
              <i class="fas fa-sign-in-alt mr-3 text-gray-400"></i> LogIn
            </a>
          </li>
        </ul>
      </div>

      <div class="flex items-center gap-2">
        <button class="w-10 h-10 flex items-center justify-center border border-gray-300 rounded text-gray-600 hover:bg-white hover:text-red-600 transition-colors relative">
          <i class="fas fa-bell"></i>
          <span class="absolute -top-1 -right-1 bg-red-600 text-white text-[10px] rounded-full w-4 h-4 flex items-center justify-center font-bold">0</span>
        </button>
        
        <button class="w-10 h-10 flex items-center justify-center border border-gray-300 rounded text-gray-600 hover:bg-white hover:text-red-600 transition-colors">
          <i class="fas fa-headset"></i>
        </button>
      </div>

    </div>
  </div>
</header>

<script>
  function toggleDropdown() {
    const menu = document.getElementById('dropdownMenu');
    const chevron = document.getElementById('chevronIcon');
    
    // Toggle visibility
    menu.classList.toggle('hidden');
    
    // Toggle chevron rotation
    chevron.classList.toggle('rotate-180');
  }

  // Optional: Close dropdown if user clicks anywhere else on the screen
  window.onclick = function(event) {
    if (!event.target.closest('#dropdownButton')) {
      const menu = document.getElementById('dropdownMenu');
      const chevron = document.getElementById('chevronIcon');
      if (!menu.classList.contains('hidden')) {
        menu.classList.add('hidden');
        chevron.classList.remove('rotate-180');
      }
    }
  }
</script>

